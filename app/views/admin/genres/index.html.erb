<div class = "container">
  <h2 class = "p-2 mb-4 bg-secondary text-white" style = "height:60px;">ジャンル一覧</h2>
    <div class = "row">
      <%= form_with model:@genre,url:admin_genres_path, local:true do |f| %>
      <table class = "table table-hover table-inverse table-striped mt-3">
        <tr>
            <%= f.label "ジャンル名" %>
            <%= f.text_field :name , class: "ml-5"%>
            <%= f.submit "新規登録", class: "btn btn-success ml-3" %>
          <% end %>
        </tr>
        <thead>
          <tr>
            <th>ID</th>
            <th>ジャンル名</th>
            <th>作成日時</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
            <td><%= genre.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
            <td><%= link_to"編集する",edit_admin_genre_path(genre),class: "btn btn-success" %></td>
            <td><%= link_to"削除する",admin_genre_path(genre), method: :delete, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>