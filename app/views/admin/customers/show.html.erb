<div class = "container">
  <div class = "row">
    <h2>会員詳細</h2>
    <table class = "table mt-3">
      <tr>
        <td>会員画像</td>
        <td><%= attachment_image_tag @customer,:customer_image, :fill,60,60, fallback:"no_image.jpg" %></td>
      </tr>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <% if @customer.is_deleted %>
          <td>無効</td>
        <% else %>
          <td>有効</td>
        <% end %>
      </tr>
    </table>
    <div class = "mx-auto">
      <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>