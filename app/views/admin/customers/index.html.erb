<div class = "container">
  <div class = "row">
    <h1 class = "p-3 mb-2 bg-secondary text-white" style = "width: 100%;">会員一覧</h1>
    <table class="table table-hover table-inverse table-striped table-bordered">

      <thead>
        <td>会員ID</td>
        <td>ユーザー名</td>
        <td>メールアドレス</td>
        <td>会員ステータス</td>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td>
            <%= customer.id %>
          </td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
              <%= customer.last_name %>
              <%= customer.first_name %>
            <% end %>
          </td>
          <td>
            <%= customer.email %>
          </td>
          <% if customer.is_deleted %>
          <td>
            <p>無効</p>
          </td>
          <% else %>
          <td>
            <p>有効</p>
          </td>
          <% end %>
        </tr>
      </tbody>
      <% end %>
    </table>
    <div class = "mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>
