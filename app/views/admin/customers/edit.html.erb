<div class = "container">
  <div class = "row">
    <h4> 会員情報編集</h4>

    <%= form_with model:@customer,url:admin_customer_path, local:true do |f| %>
    <table class = "table mt-3">
      <tr>
        <td style = "border: none;">
          <%= f.attachment_field :customer_image, placeholder: "プロフィール画像" %>
        </td>
      </tr>
      <tr>
        <td style = "border: none;">
          <%= attachment_image_tag @customer, :customer_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <%= f.label "氏名" %>
        </td>
        <td style = "border: none;">
          <%= f.text_field :last_name, autofocus: true %>
          <%= f.text_field :first_name, autofocus: true %>
        </td>
      </tr>

      <tr>
        <td style = "border: none;">
          <%= f.label "フリガナ" %>
        </td>
        <td style = "border: none;">
          <%= f.text_field :last_name_kana, autofocus: true %>
          <%= f.text_field :first_name_kana, autofocus: true %>
        </td>
      </tr>

      <tr>
        <td style = "border: none;">
          <%= f.label "メールアドレス" %>
        </td>
        <td style = "border: none;">
          <%= f.text_field :email, autofocus: true %>
        </td>
      </tr>

      <tr>
        <td>
          <%= f.label "会員ステータス" %>
        </td>
        <td>
          <%= f.radio_button :is_deleted, "active" , checked: "checked" %>
          <%= f.label :is_deleted, "有効", value:"有効" %>
          <%= f.radio_button :is_deleted, "retire" %>
          <%= f.label :is_deleted, "無効", value:"無効" %>
        </td>
      </tr>
    </table>
    <div class = "mx-auto">
      <%= f.submit '編集内容を保存', class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>