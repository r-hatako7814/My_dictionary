<div class = "admin_edit_page">
  <h1 class="admin_edit_page_label"> 会員情報編集</h1>
    <hr>
    <%= form_with model:@customer,url:admin_customer_path, local:true do |f| %>
　　<div class = "admin_edit_image">
      <%= attachment_image_tag @customer, :customer_image, :fill, 60, 60, fallback: "no_image.jpg" %></br>
      </div>
      <div class = "admin_edit_label_name">
        <%= f.label "氏名" %>
      </div>
      <div class = "admin_edit_name_field">
          <%= f.text_field :last_name, autofocus: true %>
          <%= f.text_field :first_name, autofocus: true %>
      </div>
      <div class = "admin_edit_label_kana">
        <%= f.label "フリガナ" %>
      </div>
      <div class = "admin_edit_kana_field">
          <%= f.text_field :last_name_kana, autofocus: true %>
          <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
      <div class = "admin_edit_label_email">
          <%= f.label "メールアドレス" %>
      </div>
      <div class = "admin_edit_email_field">
        <%= f.text_field :email, autofocus: true %>
      </div>
      <div class = "admin_edit_admin_label_status">
          <%= f.label "会員ステータス" %>
      </div>
      <div class = "admin_edit_admin_statusbtn">
          <%= f.radio_button :is_deleted, "false" , checked: "checked" %>
          <%= f.label :is_deleted, "有効", value:"有効" %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted, "無効", value:"無効" %>
      </div>
      <div class = "admin_edit_btn">
        <%= f.submit '編集内容を保存', class: "btn btn-primary" %>
      </div>
    <% end %>