<div class = "sessions_new">
  <div class = "ml-1 mt-3">
    <h2>ユーザーログイン</h2>
  </div>

  <%= form_with model: @customer, url: new_customer_session_path, id: 'new_user', class: 'new_customer', local: true do |f| %>
      <%= render "customer/shared/error_messages", resource: resource %>
    <div class="ml-3 mt-3">
      <%= f.label :メールアドレス %>
      <div class = "ml-3">
      <%= f.text_field :email, autofocus: true, placeholder: "sample@sample.com" %>
      </div>
    </div>

    <div class="ml-3 mt-3">
      <%= f.label :パスワード %>
      <div class = "ml-3">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="ml-4 mt-3">
        <%= f.check_box :remember_me %>
          <%= f.label :ログイン状態を保持する %>
        </div>
    <% end %>

    <div class="mt-3 ml-4">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= render "customer/shared/links" %>
</div>