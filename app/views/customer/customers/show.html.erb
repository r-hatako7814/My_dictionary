<div class = "container">
  <div class = "row">
    <div class = "col-md-3">
      <%= attachment_image_tag @customer, :customer_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      <table class = "text-align-center" border = "5" rules = "none">
        <tr>
          <td>
            <%= @customer.last_name %><%= @customer.first_name %>
          </td>
        </tr>
        <tr>
          <th>
            投稿数：
          </th>
          <td>
            <%#= @customer.contributions.count %>
          </td>
        </tr>
      </table>
      <%= link_to "ユーザー情報編集", customers_edit_path(current_customer), class:"btn btn-outline-secondary btn-block" %>
    </div>
    <div class = "col-md-9">
      <div class = "table table-hover table-inverse table-striped table-borderd">
        <div class = "p-3 mb-2 bg-secondary text-white">
          <h3>MyDictionary</h3>
        </div>
        <thead>
          <tr>
            <th>記述日</th>
            <th>記述内容</th>
            <th>意味</th>
            <th>詳細</th>
          </tr>
        </thead>
        <tbody>
        <%# @customer.contribution.each do |contribution| %>
        <tr>
          <td><%#= customer.contribution.created_at.strftime('%Y/%m/%d') %></td>
          <td><%#= customer.contribution.title %></td>
          <td><%#= customer.contribution.body %></td>
          <td><%#= link_to "詳細へ", contribution_path(contribution), class: "btn btn-sm btn-primary" %></td>
        </tr>
        <%# end %>
        </tbody>
      </div>
    </div>
  </div>
</div>