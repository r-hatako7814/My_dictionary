<div class = "container">
  <div class = "row">
    <h2>新規登録</h2>
    <%= form_with model: @customer, url: customer_registration_path, id: 'new_user', class: 'new_customer', local: true do |f| %>
      <%= render "customer/shared/error_messages", resource: resource %>
      <table>
        <tr>
          <td style = "border:none;">
            <%= f.label "名前" %>
          </td>
          <td style = "border:none;">
            <%= f.text_field :last_name, autofocus: true, placeholder: "(姓)" %>
            <%= f.text_field :first_name, autofocus: true, placeholder: "(名)" %>
          </td>
        </tr>
        <tr>
          <td style = "border:none;">
            <%= f.label "フリガナ" %>
          </td>
          <td style = "border:none;">
            <%= f.text_field :last_name_kana, autofocus: true, placeholder: "(セイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, placeholder: "(メイ)" %>
          </td>
        </tr>
        <tr>
          <td style = "border:none;">
            <%= f.label "メールアドレス" %>
          </td>
          <td style = "border:none;">
            <%= f.text_field :email, autofocus: true, placeholder: "sample@sample.com" %>
          </td>
        </tr>
        <tr>
          <td style = "border:none;">
            <%= f.label "パスワード(6文字以上)" %>
          </td>
          <td style = "border:none;">
            <%= f.password_field :password, placeholder: "new-password" %>
          </td>
        </tr>
        <tr>
          <td style = "border:none;">
            <%= f.label "パスワード(確認用)" %>
          </td>
          <td style = "border:none;" >
            <%=f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td style = "border:none;">
            <%= f.submit "新規登録" %>
          </td>
        </tr>
        <% end %>
        <tr>
          <td style="border:none;">
            <h4 class="new">既に登録済みの方</h4>
            <%= render "customer/shared/links" %>
          </td>
        </tr>
      </table>
  </div>
</div>