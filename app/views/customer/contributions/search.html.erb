<h2>Books search for <%= params[:keyword] %></h2>
<div class = "container">
  <div class = "row">
    <table class="table table-hover table-inverse table-striped table-bordered">
      <thead>
        <tr>
          <th>記述内容</th>
          <th>意味</th>
          <th>記述日時</th>
          <th>詳細</th>
        </tr>
      </thead>
      
      
      
      <div class = "index-search-form">
        <%= form_with url: search_path, local: true do |f| %>
          <%= f.text_field :keyword, value: @keyword %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
      
      
      
      <tbody>
        <% @contributions.each do |contribution| %>
          <tr>
            <td>
              <%= contribution.title %>
            </td>
            <td>
              <%= contribution.body %>
            </td>
            <td>
              <%= contribution.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            </td>
            <td>
              <%= link_to "詳細へ", contribution_path(contribution), class: "btn btn-sm btn-primary" %>
            </td>
            <td>
              <p>
               <%= render 'customer/favorites/favorite-btn', contribution: contribution %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class = "mx-auto">
      <%= paginate @contributions %>
    </div>
  </div>
</div>
