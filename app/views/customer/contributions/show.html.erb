<div class = "container">
  <div class = "row">
    <h2>投稿詳細</h2>
    <table class = "table mt-3">
      <tr>
        <td>会員画像</td>
        <td><%= attachment_image_tag @customer,:customer_image, :fill,60,60, fallback:"no_image.jpg" %></td>
      </tr>
      <tr>
        <td>投稿者名</td>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>投稿内容</td>
        <td><%= @contribution.title %></td>
      </tr>
      <tr>
        <td>意味</td>
        <td><%= @contribution.body %></td>
      </tr>
      <tr>
        <td class = genre_box>投稿ジャンル</td>

        <td class = "genre_item">
          <% @contribution.genres.each do |genre| %>
           <%= genre.name + "  " %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>投稿日時</td>
        <td><%= @contribution.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
      </tr>
    </table>
    <div class = "mx-auto">
      <% if @customer.id == current_customer.id %>
        <%= link_to "削除する", contribution_path(@contribution),method: :delete,"data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
        <%= link_to "編集する", edit_contribution_path, class: "btn btn-primary ml-2" %>
      <% else %>
        <%= link_to "この人の投稿一覧を見る", customers_my_dictionary_path(@customer), class: "btn btn-primary ml-2" %>
      <% end %>
    </div>
  </div>
</div>